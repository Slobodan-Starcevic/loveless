<style lang="scss">
    .header-wrapper {
        position: relative;
        overflow: visible;
        padding: var(--spacing-6xl) 0 var(--spacing-3xl) 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;

        #floating-header {
            position: absolute;
            color: var(--loveless-black);
            transition: transform 0.2s ease-out;
        }
    }

    .terms-wrapper {
        color: var(--loveless-pink);
        padding: var(--spacing-l);
        display: flex;
        flex-direction: column;
        gap: var(--spacing-s);

        h1, h2, p, li {
            max-width: 800px;
            margin: 0 auto;
        }

        p {
            color: hsl(302, 100%, 89%)
        }

        ul {
            padding-left: 1.4rem;
        }
    }

    .gallery-wrapper {
        width: 100%;
        min-height: 100vh;
        padding: var(--spacing-s);
        display: flex;
        visibility: hidden;

        .gallery-cic-123 {
            width: 100%;
            padding: var(--spacing-l) 0;
            background-color: var(--loveless-black);
            border-radius: var(--radius-2xl);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
    }

    /* Grain effect */
    .grain {
        z-index: 9999;
        position: fixed;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
        display: flex;
    }

    .grain-texture {
        background-image: url('/images/grain.png');
        background-size: 256px;
        width: 300%;
        height: 300%;
        position: absolute;
        inset: -150% 0 0 -150%;
        animation: 2s steps(1) infinite noise;
    }

    @keyframes noise {
        0%, 100% { background-position: 0 0; }
        10% { background-position: -5% -10%; }
        20% { background-position: -15% 5%; }
        30% { background-position: 7% -25%; }
        40% { background-position: 20% 25%; }
    }
       
