<style lang="scss">
    .background-image {
        z-index: 0;
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .content-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    
        .loveless-header {
            z-index: 10;
            text-align: right;
            color: var(--loveless-black);
            flex: 1 1;
            overflow: visible;
            cursor: default;
            
            h1{
                transition: margin 0.3s var(--custom-ease-1);
                padding: 2px;

                &:hover{
                    margin-right: 20px;
                }
            }
        }

        .loveless-logo {
            z-index: 10;
        }
    }

    .nav-list{
        z-index: 10;
        list-style: none;
        flex: 1 1;

        li a {
            text-decoration: none;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            
            .li-text{
                font-family: 'Mortend', sans-serif;
                font-size: var(--font-size-3xl);
                color: var(--loveless-black);
                line-height: 1;
                transition: all 0.3s var(--custom-ease-1);
            }

            svg{
                position: absolute;
                opacity: 0;
                width: var(--font-size-3xl);
                height: var(--font-size-3xl);
                color: var(--loveless-pink);
                fill: var(--loveless-black);
                transition: opacity 0.3s var(--custom-ease-1);
            }

            &:hover{
                .li-text{
                    margin-left: 50px;
                    color: var(--loveless-pink);
                    text-shadow: none;
                }
                svg{
                    opacity: 1;
                }
            }
        }
    }
    
    .scroll {
        position: absolute;
        bottom: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 20;
        margin-bottom: 3rem;
        overflow: visible;
        
        svg{
        width: 40px;
        fill: var(--loveless-pink);
        animation: chevronAnimation 2s ease-in-out infinite;
        }
    }

    @keyframes chevronAnimation {
        0%{
            transform: translateY(0);
        }
        50%{
            transform: translateY(10px);
        }
        100%{
            transform: translateY(0);
        }
    }

    @media screen and (max-width : 767px) {
        h1{ 
            text-align: center;
        }
        .content-wrapper{
            flex-direction: column;
        }
        .scroll{
            margin-bottom: 1rem;
            svg{
                width: 20px;
            }
            p{
                font-size: var(--font-size-s);
            }
        }
        .loveless-logo{
            width: 250px;
        }
        .nav-list{
            li a{
                justify-content: center;
                .li-text{
                    font-size: var(--font-size-2xl);
                }
            }
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1079px) {
        h1{ 
            text-align: center;
        }
        .content-wrapper{
            flex-direction: column;
        }
        .scroll{
            margin-bottom: 1rem;
            svg{
                width: 20px;
            }
            p{
                font-size: var(--font-size-s);
            }
        }
        .loveless-logo{
            width: 250px;
        }
        .nav-list{
            li a{
                justify-content: center;
                
                .li-text{
                    font-size: var(--font-size-3xl);
                }
                &:hover{
                    all: unset;
                }
            }
        }
    }
    @media screen and (min-width : 1080px) {
        h1{ 
            text-align: right;
            padding-left: var(--spacing-2xl);
        }
        .content-wrapper{
            flex-direction: row;
        }
        .scroll{
            margin-bottom: 1rem;
            svg{
                width: 20px;
            }
            p{
                font-size: var(--font-size-s);
            }
        }
        .loveless-logo{
            width: 250px;
        }
        .nav-list{
            li a{
                justify-content: flex-start;
                .li-text{
                    font-size: var(--font-size-3xl);
                }
                svg{
                    padding: 0 0 var(--spacing-s) var(--spacing-xs);
                }
            }
        }
    }
</style>